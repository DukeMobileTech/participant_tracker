<body class="background-dark">
<% if user_signed_in? %>
<div class="logo">
  <h4><%= link_to('LSTracker', root_path) %></h4>
</div>

<nav id="sidebar" class="sidebar nav-collapse collapse">
    <ul id="side-nav" class="side-nav">
        
        <li class="<%= current_page?(participants_path) ? 'active' : 'panel' %>">
            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#side-nav" href="#participants-collapse">
                <i class="icon-edit"></i> <span class="name">Participants</span></a>
            <ul id="participants-collapse" class="panel-collapse collapse">
                <li><%= link_to 'Participants', participants_path %></li>
            </ul>
        </li>
        <li class="<%= current_page?(participant_types_path) ? 'active' : 'panel' %>">
            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#side-nav" href="#participanttypes-collapse">
                <i class="icon-edit"></i> <span class="name">Participant Types</span></a>
            <ul id="participanttypes-collapse" class="panel-collapse collapse">
                <li><%= link_to 'Participant Types', participant_types_path %></li>
                <li><%= link_to 'New Participant Type', new_participant_type_path %></li>
            </ul>
        </li>    
        <li class="<%= current_page?(properties_path) ? 'active' : 'panel' %>">
            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#side-nav" href="#attributes-collapse">
                <i class="icon-edit"></i> <span class="name">Participant Properties</span></a>
            <ul id="attributes-collapse" class="panel-collapse collapse">
                <li><%= link_to 'Properties', properties_path %></li>
                <li><%= link_to 'New Property', new_property_path %></li>
            </ul>
        </li>
        <li class="<%= current_page?(relationship_types_path) ? 'active' : 'panel' %>">
            <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#side-nav" href="#relationshiptypes-collapse">
                <i class="icon-edit"></i> <span class="name">Relationship Types</span></a>
            <ul id="relationshiptypes-collapse" class="panel-collapse collapse">
                <li><%= link_to 'Relationship Types', relationship_types_path %></li>
                <li><%= link_to 'New Relationship Type', new_relationship_type_path %></li>
            </ul>
        </li> 
        <li class="<%= current_page?(device_sync_entries_path) ? 'active' : 'panel' %>">
            <%= link_to 'Device Sync Entries', device_sync_entries_path %>
        </li> 
        
    </ul>
</nav>

<div class="wrap">
    <header class="page-header">
        <div class="navbar">
          <ul class="nav navbar-nav navbar-right pull-right">
            <li class="hidden-xs">
              <%= button_to destroy_user_session_path, :method => :delete, class: 'btn btn-default' do %>
              <i class="eicon-logout"></i>
              <% end %>
            </li>
          </ul>
          <div class="notifications pull-right">
            <div class="alert pull-right">
              <a href="#" class="close" data-dismiss="alert">&times;</a>
              <i class="eicon-info"></i> Currently logged in as <%= current_user.email %>
            </div>
          </div>
        </div>
    </header>

<% end %>
