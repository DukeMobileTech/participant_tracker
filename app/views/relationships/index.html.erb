<h2 class="text-center page-title">Relationships</h2>

<section class="widget">
  <table class="table table-striped no-margin sources-table">
    <thead>
      <tr>
        <th>Uuid</th>
        <th>Relationship Type Id</th>
        <th>Participant Owner Uuid</th>
        <th>Participant Related Uuid</th>
      </tr>
    </thead>

    <tbody>
      <% @relationships.each do |relationship| %>
      <tr>
        <td><%= link_to relationship.uuid, project_participant_relationship_path(current_project, @participant, relationship) %></td>
        <td><%= relationship.relationship_type_id %></td>
        <td><%= relationship.participant_owner_uuid %></td>
        <td><%= relationship.participant_related_uuid %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>