<div class="row">
    <div class="col-md-12">
        <h2 class="page-title">Attribute <%= @attribute.label %></h2>
    </div>
</div>
<section class="widget">
<table class="table table-striped no-margin sources-table">
    <thead>
        <tr>
          <th>Attribute Name </th>
          <th>Attribute Value </th>
        </tr>
    </thead> 
    <tbody>
        <% @attribute.attributes.each do |column_name, column_value| %>
            <tr>
                <td><%= column_name %></td>
                <td><%= column_value %></td>
            </tr>
        <% end %>
    </tbody>   
</table>

<%= link_to 'Edit Attribute', edit_attribute_path(@attribute), class: 'btn btn-primary' %> 
</section>