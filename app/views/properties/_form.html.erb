<section class="widget">                        

<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this attribute from being saved:</h2>

      <ul>
      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row control-group">
    <label class="col-md-4 control-label"><%= f.label :label %></label>
    <div class="col-md-8 controls form-group"><%= f.text_field :label %></div>
  </div>
  <div class="row control-group">
    <label class="col-md-4 control-label"><%= f.label :type_of %></label>
    <div class="col-md-8 controls form-group"><%= f.select(:type_of, options_for_select(['integer', 'string'])) %></div>
  </div>
  <div class="row control-group">
    <label class="col-md-4 control-label"><%= f.label :participant_type_id %></label>
    <div class="col-md-8 controls form-group"><%= f.select(:participant_type_id, ParticipantType.all.collect {|p| [p.label, p.id]}) %></div>
  </div>
  <div class="row control-group">
    <label class="col-md-4 control-label"><%= f.label :required %></label>
    <div class="col-md-8 controls form-group"><%= f.check_box :required %></div>
  </div>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

</section>