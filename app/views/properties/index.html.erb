<div class="row">
    <div class="col-md-12">
        <h2 class="page-title">Properties</h2>
    </div>
</div>

<section class="widget">
    <table class="table table-striped no-margin sources-table">
      <thead>
        <tr>
          <th>Property Label</th>
          <th>Type</th>
          <th>Validator</th>
          <th>Required</th>
          <th>Include in Metadata</th>
          <th>Use as Label</th>
        </tr>
      </thead>
    
      <tbody>
        <% @properties.each do |property| %>
          <tr>
            <td><%= link_to property.label, property_path(property) %></td>
            <td><%= property.type_of %></td>
            <td><%= property.validator %></td>
            <td><%= property.required %></td>
            <td><%= property.include_in_metadata %></td>
            <td><%= property.use_as_label %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</section>
